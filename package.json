{
  "name": "foodplanner",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:server": "node ./buildServer.js",
    "run:server": "node build/index.js",
    "start:server": "yarn build:server && yarn run:server",
    "generate:db:types": "schemats postgres postgres://foodplanner:foodplanner@localhost/foodplanner?sslmode=disable -C -e -o ./src/model/types.ts",
    "check:types:client": "tsc --noEmit",
    "check:types:server": "tsc --noEmit -p ./tsconfig.server.json",
    "check:types": "yarn check:types:client && yarn check:types:server",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.36",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.31",
    "@types/react": "17",
    "@types/react-dom": "17",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-select": "^5.0.1",
    "@types/styled-components": "^5.1.25",
    "@vramework/schemats": "^1.0.4",
    "babel-plugin-macros": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "pg-monitor": "^1.4.1",
    "pg-promise": "^10.11.1",
    "react": "17",
    "react-dom": "17",
    "react-hook-form": "^7.31.2",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-select": "^5.3.2",
    "styled-components": "^5.3.5",
    "typescript": "^4.6.4",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.39",
    "esbuild-plugin-copy": "^1.3.0"
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": [
        "./tsconfig.json",
        "./tsconfig.server.json"
      ]
    },
    "ignorePatterns": [
      "**/*.js"
    ],
    "rules": {
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
